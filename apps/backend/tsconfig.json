{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "ES2022",

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src/",

    /* Emit */
    "outDir": "./dist/",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Projects */
    "composite": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
